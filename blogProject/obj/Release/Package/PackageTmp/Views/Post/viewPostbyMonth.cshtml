@model blogProject.Models.monthSelectPostViewModel

@{
    ViewBag.Title = "postList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel-body">
    <h1 class="page-header">
        Month of : @Model.monthName - @Model.year
        <small> posts .. </small>
    </h1>
    @if (Model.posts.Count() <= 0)
    {
        <div class="panel panel-danger">
            <div class="panel-heading"><h4>Post Search Error <span class="glyphicon glyphicon-question-sign"></span> </h4></div>
            <div class="panel-body">No Post avaliable for the month of - <label class="btn-danger"> @Model.monthName</label></div>
        </div>
    }
    <!-- First Blog Post -->
    @foreach (var p in Model.posts)
    {
        <h2>
            @Html.RouteLink(@p.postName, new
       {
           controller = "Post",
           action = "viewPost",
           postId = p.postId
       })
            <span class="label label-danger">
                @p.comments.Count()
            comments
        </span>
    </h2>
        <p class="lead">
            by <a href="index.php">Admin <span class="glyphicon glyphicon-user"></span></a>
        </p>
        <p><span class="glyphicon glyphicon-time"></span> Posted on @p.createDate.ToString()</p>
        <p>
           @Html.Raw(p.postText)
        </p>
        @Html.RouteLink("Read more..", new
   {
       controller = "Post",
       action = "viewPost",
       postId = p.postId
   },
             new
             {
                 @class = "btn btn-primary"
             }
   )
        <hr>
    } @*// for loop ending*@

    <!-- Pager -->
    <ul class="pager">
        <li class="previous">
            <a href="#">&larr; Older</a>
        </li>
        <li class="next">
            <a href="#">Newer &rarr;</a>
        </li>
    </ul>
</div>
