@model blogProject.Models.categoriesViewModel
<div class="panel panel-default">
    <div class="panel-heading">
        <label type="button" class="btn btn-primary">
            Post Categories <span class="glyphicon glyphicon-comment"></span>
        </label>

    </div>
   
    
        <ul class="list-group">
            @foreach (var category in Model.listCategories)
            {
                <li class="list-group-item">
                    <span class="glyphicon glyphicon-book"></span>
                    
                        @Html.RouteLink(category.categoryName,
                  new
                  {
                      controller = "Post",
                      action = "postList",
                      categoryId = category.categoryId

                  })
                    
                </li>
            } @*<! --- For loop ending-->*@
           
        </ul>
   
    
</div>